{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "cloudinary": "^2.6.1",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "http-status-code": "^2.1.0",
    "inversify": "^7.5.1",
    "lint-staged": "15",
    "mongoose": "^8.15.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "reflect-metadata": "^0.2.2",
    "svix": "^1.66.0",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.5.0",
    "znv": "^0.5.0",
    "zod": "^3.25.28",
    "zod-validation-error": "^3.4.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.15.21",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "mongodb-memory-server": "^10.1.4",
    "prettier": "^3.5.3",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  },
  "type": "commonjs",
  "scripts": {
    "clean-up": "rm -rf dist",
    "lint": "eslint ./src --ext .ts,.js",
    "lint:fix": "eslint ./src --ext .ts,.js --fix",
    "format": "prettier --log-leve=warn --cache --write ./src",
    "mongo:migration:run": "migrate up",
    "mongo:migration:create": "migrate create",
    "prestart": "run-s mongo:migration:run lint",
    "start": "node dist/index.js",
    "predev": "run-s lint:fix",
    "dev": "node --import=tsx --watch src/index.ts",
    "build": "run-s clean-up && tsc --noEmit && tsup src/index.ts --format cjs --minify"
  },
  "lint-staged": {
    "*.{ts,js, json}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
